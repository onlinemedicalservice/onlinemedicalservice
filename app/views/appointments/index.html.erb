<div class="header">All Appointments</div>

<table>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Patient</th>
      <th>Kiosk</th>
      <th>Appointment Date</th>
      <th>Allotment Date</th>
      <th>Status</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.doctor.name  if appointment.doctor %></td>
        <td><%= appointment.patient.name if appointment.patient %></td>
        <td><%#= appointment.kiosk.name %></td>
        <td><%= date_format(appointment.appointment_date) %></td>
        <td><%= date_format(appointment.allotment_date) %></td>

        <td><%= appointment.description %></td>
        <!--<td><%#= link_to 'Show', appointment %></td>-->
        <!--<td><%#= link_to 'Edit', edit_appointment_path(appointment) %></td>-->
        <!--<td><%#= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

